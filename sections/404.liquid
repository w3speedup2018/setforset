<section class="section">
  <div
    class="
      container
      main-wrapper
      text-align-center
    "
  >
    <div
      class="
        one-whole
        column
        collection_nav
      "
    >
      <h1>
        {{ 'general.404.title' | t }}
      </h1>

      <div class="feature_divider"></div>
    </div>

    <div class="one-whole column">
      <p class="quote">
        {{ 'general.404.subtext' | t }}
      </p>

      <p class="extra_padding">
        {{ 'general.404.continue_shopping_html' | t: continue_link: routes.all_products_collection_url }}
      </p>
    </div>

    <div
      class="
        three-eighths
        columns
        medium-down--one-whole
        offset-by-five
        is-hidden-offset-mobile-only
      "
      data-autocomplete-{{ settings.enable_autocomplete }}
    >
      <form action="{{ routes.search_url }}">
        <input
          type="hidden"
          name="type"
          value="{{ settings.search_option }}"
        >

        <input
          class="search_box"
          type="text"
          name="q"
          placeholder="{{ 'general.search.placeholder' | t }}"
          value="{{ search.terms }}"
        >
      </form>
    </div>
  </div>
</section>
