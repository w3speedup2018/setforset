<div class="html-section-accordian-wrap">
  <div class="html-section-accordian">
    {% if product.metafields.accordion_title1.text != blank %}
    <div class="html-section-accordian-row">
      <div class="html-section-accordian-title html-section-accordian1-title">+ {{ product.metafields.accordion_title1.text }}</div>
      <div class="html-section-accordian-content html-section-accordian-content1">
        <div class="accordion-content">{{ product.metafields.accordion_content_1.text }}</div></div>
    </div>
      {% endif %}
  </div>
</div>
<style>
  .html-section-accordian-row{
    background: url();
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center bottom;
    border-top:3px solid;
  }
  .html-section-accordian-row:last-child{
    border-bottom:3px solid;
  }
  .html-section-accordian-title{
    padding: 30px 15px;
    font-size: 30px;
    font-weight: bold;
    text-align: center;
    cursor:pointer;
  }
  .html-section-accordian-content{
    display:none;
    padding:0 15px;
  }
  .html-section-accordian-content1 .accordion-content{
      max-width: 1000px;
      margin: auto;
  }
  .html-section-accordian-content1 .accordion-content p{
      text-align: left;
      font-size: 20px;
      margin-bottom: 30px;
  }
  .html-section-accordian-content2 .accordion-content{
      max-width: 1000px;
      margin: auto;
      display: flex;
      flex-wrap: wrap;
      justify-content: left;
  }
 
  @media(max-width: 576px){
      .html-section-accordian-content3 .accordion-content-image-secion{
          padding: 20px 10px;
      }
      .html-section-accordian-content2 .accordion-content.col-md-6{
          flex: 0 0 100%;
          max-width: 100%
      }
  }
</style>

{% schema %}
  {
    "name": "Accordion Section 1",
    "settings": [], 
    "presets": [
      {
        "name": "Accordion Section 1",
        "category": "Image"
      }
    ],
    "templates": [
      "index",
      "product",
      "page",
      "list-collections",
      "collection",
      "blog",
      "article"
    ]
  }
{% endschema %}